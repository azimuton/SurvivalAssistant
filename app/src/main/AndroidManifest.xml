<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.jkdajac.survivalassistant">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission_group.STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_survival"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_survival_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SurvivalAssistant">
        <activity
            android:name=".presentation.safety.SafetyActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.psychology.PsychologyActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.equipment.EquipmentActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.shoesandclothes.ShoesAndClothesActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.orientation.OrientationActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.dictaphone.DictaphoneActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.stopwatch.StopwatchActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.timer.TimerActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.note.NoteActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.sled.SledActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.compass.CompassActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>